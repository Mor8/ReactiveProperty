<prism:PrismUnityApplication x:Class="UWP.TodoMVVM.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="using:UWP.TodoMVVM"
                             xmlns:prism="using:Prism.Unity.Windows"
                             xmlns:Converters="using:UWP.TodoMVVM.Converters"
                             RequestedTheme="Light">
    <prism:PrismUnityApplication.Resources>
        <Converters:NoopConverter x:Key="NoopConverter" />
        <Converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="ButtonCommandStyle" TargetType="Button" BasedOn="{StaticResource TextBlockButtonStyle}">
            <Setter Property="Margin" Value="2.5" />
        </Style>
    </prism:PrismUnityApplication.Resources>
</prism:PrismUnityApplication>
